<UserControl
    x:Class="WpfStudyNote.Views.Controller.Views.ShowArticleView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:helper="clr-namespace:WpfStudyNote.Views.Controller.ControllerHelper"
    xmlns:local="clr-namespace:WpfStudyNote.Views.Controller.Views"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    d:DesignHeight="450"
    d:DesignWidth="800"
    prism:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d">
    <hc:ScrollViewer Margin="5">
        <DockPanel>
            <!--  标题栏  -->
            <TextBlock
                Margin="10,0"
                Padding="10"
                Background="{DynamicResource DefaultBrush}"
                DockPanel.Dock="Top"
                FontSize="20"
                Text="{Binding Article.Title}" />
            <DockPanel
                Margin="10,0"
                Background="{DynamicResource DefaultBrush}"
                DockPanel.Dock="Top">
                <TextBlock
                    Margin="5"
                    DockPanel.Dock="Left"
                    Text="文章作者:" />
                <TextBlock
                    Margin="5"
                    DockPanel.Dock="Left"
                    Text="lintaiwei" />
                <TextBlock
                    Margin="5"
                    DockPanel.Dock="Left"
                    Text="发布日期:" />
                <TextBlock
                    Margin="5"
                    DockPanel.Dock="Left"
                    Text="{Binding Article.CreatedAt}" />
            </DockPanel>
            <!--  标签信息  -->
            <hc:SimplePanel
                Margin="10,0"
                Background="{DynamicResource DefaultBrush}"
                DockPanel.Dock="Top">
                <hc:SimpleStackPanel Margin="10,5" Orientation="Horizontal">
                    <TextBlock
                        Margin="5"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Text="文章标签:"
                        TextAlignment="Center" />
                    <hc:TagContainer
                        MaxWidth="700"
                        Margin="5"
                        hc:TagContainer.ShowCloseButton="False">
                        <hc:Tag Content="C#" />
                        <hc:Tag Content="Sql" />
                    </hc:TagContainer>
                </hc:SimpleStackPanel>
            </hc:SimplePanel>
            <!--  富文本控件  -->
            <RichTextBox
                x:Name="NoteBox"
                Grid.Row="1"
                Margin="10,0"
                helper:RichTextBoxHelperExactly.FlowDocument="{Binding Data}"
                IsReadOnly="True"
                ScrollViewer.VerticalScrollBarVisibility="Visible" />
        </DockPanel>
    </hc:ScrollViewer>
</UserControl>
