<UserControl
    x:Class="WpfStudyNote.Views.Controller.Views.RegisterView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WpfStudyNote.Views.Controller.Views"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    Width="450"
    d:DesignWidth="450"
    prism:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d">
    <StackPanel>
        <TextBlock
            Margin="5"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="48"
            Text="注册新用户" />
        <TextBox
            x:Name="UserIDTextBox"
            Height="54"
            Margin="10"
            Padding="7"
            materialDesign:HintAssist.Hint="请输入用户邮箱"
            Background="White"
            FontFamily="kaiti"
            FontSize="20"
            Opacity="0.7"
            Style="{DynamicResource MaterialDesignOutlinedTextBox}"
            Text="{Binding Account.Email}" />
        <TextBox
            Height="54"
            Margin="10"
            Padding="7"
            materialDesign:HintAssist.Hint="请输入用户名"
            Background="White"
            FontFamily="kaiti"
            FontSize="20"
            Opacity="0.7"
            Style="{DynamicResource MaterialDesignOutlinedTextBox}"
            Text="{Binding Account.AccountName}" />
        <PasswordBox
            x:Name="PasswordBox"
            Height="54"
            Margin="10"
            Padding="7"
            materialDesign:HintAssist.Hint="请输入密码"
            Background="White"
            FontFamily="kaiti"
            FontSize="20"
            LostFocus="PasswordBox_LostFocus"
            Opacity="0.8"
            Style="{DynamicResource MaterialDesignOutlinedPasswordBox}" />
        <PasswordBox
            x:Name="RePasswordBox"
            Height="54"
            Margin="10"
            Padding="7"
            materialDesign:HintAssist.Hint="请确认密码"
            Background="White"
            FontFamily="kaiti"
            FontSize="20"
            LostFocus="PasswordBox_LostFocus"
            Opacity="0.8"
            Style="{DynamicResource MaterialDesignOutlinedPasswordBox}" />
        <TextBox
            Height="162"
            Margin="10"
            Padding="7"
            materialDesign:HintAssist.Hint="请输入说明"
            AcceptsReturn="True"
            Background="White"
            FontFamily="kaiti"
            FontSize="20"
            Opacity="0.7"
            Style="{DynamicResource MaterialDesignOutlinedTextBox}"
            Text="{Binding Account.Introduction}" />
        <Button
            x:Name="RegisterButton"
            Height="54"
            Margin="10,20"
            Command="{Binding RegisterCommand}"
            CommandParameter="{Binding ElementName=PasswordBox}"
            Content="注册用户"
            Style="{DynamicResource MaterialDesignFlatMidBgButton}" />
        <TextBlock
            x:Name="ErrorMessage"
            Margin="5"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Foreground="Red"
            Text="{Binding ErrorMessage}" />
    </StackPanel>
</UserControl>
