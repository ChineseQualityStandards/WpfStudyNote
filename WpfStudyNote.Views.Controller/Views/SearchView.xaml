<UserControl
    x:Class="WpfStudyNote.Views.Controller.Views.SearchView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:local="clr-namespace:WpfStudyNote.Views.Controller.Views"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    x:Name="SearchPage"
    d:DesignHeight="450"
    d:DesignWidth="800"
    prism:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d">
    <hc:ScrollViewer x:Name="SearchScrollViewer" IsInertiaEnabled="True">
        <DockPanel LastChildFill="True">
            <!--  搜索框  -->
            <materialDesign:ColorZone
                Margin="15,15,15,0"
                Padding="5"
                Panel.ZIndex="1"
                materialDesign:ElevationAssist.Elevation="Dp2"
                CornerRadius="2"
                DockPanel.Dock="Top"
                Mode="Standard">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBox
                        Grid.Column="0"
                        Height="40"
                        MinWidth="200"
                        Margin="8,0,0,0"
                        VerticalAlignment="Center"
                        materialDesign:HintAssist.Hint="Build a search bar"
                        materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                        BorderThickness="0"
                        FontFamily="DFKai-SB"
                        FontSize="22" />
                    <Button
                        Grid.Column="1"
                        Width="100"
                        Height="45"
                        Margin="5,0"
                        Command="{Binding DelegateCommand}"
                        CommandParameter="Search"
                        Content="查询"
                        FontFamily="DFKai-SB"
                        FontSize="22"
                        Style="{StaticResource ButtonPrimary}" />
                </Grid>
            </materialDesign:ColorZone>
            <Expander
                Margin="15,15,15,0"
                Background="{DynamicResource RegionBrush}"
                DockPanel.Dock="Top"
                Style="{DynamicResource ExpanderBaseStyle}">
                <Expander.Header>
                    <DockPanel LastChildFill="True">
                        <Button
                            Height="40"
                            BorderThickness="0"
                            Content="全部"
                            FontSize="24"
                            FontWeight="Black"
                            Style="{DynamicResource ButtonDashed}" />
                        <Button
                            Height="40"
                            BorderThickness="0"
                            Content="时间排序"
                            FontSize="24"
                            Style="{DynamicResource ButtonDashed}" />
                        <Button
                            Height="40"
                            BorderThickness="0"
                            Content="分类"
                            FontSize="24"
                            Style="{DynamicResource ButtonDashed}" />
                        <Button hc:IconElement.Geometry="{DynamicResource arrowupdown-001}" Style="{DynamicResource ButtonIcon}" />
                    </DockPanel>
                </Expander.Header>
                <DockPanel Background="{DynamicResource RegionBrush}" LastChildFill="True">
                    <StackPanel DockPanel.Dock="Top" Orientation="Horizontal">
                        <TextBlock
                            Margin="25,0"
                            VerticalAlignment="Center"
                            DockPanel.Dock="Top"
                            FontSize="20"
                            Text="分级:" />
                        <Button
                            Height="40"
                            BorderThickness="0"
                            Content="基础知识"
                            FontSize="20"
                            FontWeight="Black"
                            Style="{DynamicResource ButtonDashed}" />
                        <Button
                            Height="40"
                            BorderThickness="0"
                            Content="进阶知识"
                            FontSize="20"
                            FontWeight="Light"
                            Style="{DynamicResource ButtonDashed}" />
                        <Button
                            Height="40"
                            BorderThickness="0"
                            Content="核心知识"
                            FontSize="20"
                            FontWeight="Light"
                            Style="{DynamicResource ButtonDashed}" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock
                            Margin="25,0"
                            VerticalAlignment="Center"
                            FontSize="20"
                            Text="时间:" />
                        <Button
                            Height="40"
                            BorderThickness="0"
                            Content="不限"
                            FontSize="20"
                            FontWeight="Black"
                            Style="{DynamicResource ButtonDashed}" />
                        <Button
                            Height="40"
                            BorderThickness="0"
                            Content="一天内"
                            FontSize="20"
                            FontWeight="Light"
                            Style="{DynamicResource ButtonDashed}" />
                        <Button
                            Height="40"
                            BorderThickness="0"
                            Content="一周内"
                            FontSize="20"
                            FontWeight="Light"
                            Style="{DynamicResource ButtonDashed}" />
                        <Button
                            Height="40"
                            BorderThickness="0"
                            Content="一月内"
                            FontSize="20"
                            FontWeight="Light"
                            Style="{DynamicResource ButtonDashed}" />
                        <Button
                            Height="40"
                            BorderThickness="0"
                            Content="三月内"
                            FontSize="20"
                            FontWeight="Light"
                            Style="{DynamicResource ButtonDashed}" />
                        <Button
                            Height="40"
                            BorderThickness="0"
                            Content="一年内"
                            FontSize="20"
                            FontWeight="Light"
                            Style="{DynamicResource ButtonDashed}" />
                    </StackPanel>
                </DockPanel>
            </Expander>
            <DockPanel
                Margin="15,0,15,15"
                DockPanel.Dock="Top"
                LastChildFill="True">
                <StackPanel
                    Background="{DynamicResource RegionBrush}"
                    DockPanel.Dock="Left"
                    Orientation="Horizontal">
                    <TextBlock
                        Margin="25,0"
                        VerticalAlignment="Center"
                        FontSize="20"
                        Text="查询方式:" />
                    <CheckBox
                        Margin="5"
                        VerticalAlignment="Center"
                        Content="模糊查询"
                        FontSize="20"
                        IsChecked="True" />
                    <CheckBox
                        Margin="5"
                        VerticalAlignment="Center"
                        Content="按标题查询"
                        FontSize="20"
                        IsChecked="True" />
                    <CheckBox
                        Margin="5"
                        VerticalAlignment="Center"
                        Content="按文章内容查询"
                        FontSize="20"
                        IsChecked="True" />

                </StackPanel>
                <Grid Background="{DynamicResource RegionBrush}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock
                        Grid.Column="0"
                        Margin="15,0,0,0"
                        VerticalAlignment="Center"
                        FontSize="15"
                        FontWeight="ExtraLight"
                        Text="查询到结果" />
                    <TextBlock
                        Grid.Column="1"
                        Margin="0"
                        VerticalAlignment="Center"
                        FontSize="15"
                        FontWeight="ExtraLight"
                        Text="{Binding Count}" />
                    <TextBlock
                        Grid.Column="2"
                        Margin="0,0,15,0"
                        VerticalAlignment="Center"
                        FontSize="15"
                        FontWeight="ExtraLight"
                        Text="个" />
                </Grid>
            </DockPanel>

            <ItemsControl DockPanel.Dock="Top" ItemsSource="{Binding ArticlesList, Mode=OneWay, NotifyOnSourceUpdated=True}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <hc:Card Margin="15,0" DockPanel.Dock="Top">
                            <DockPanel Height="160" LastChildFill="True">
                                <Button
                                    Height="60"
                                    HorizontalAlignment="Left"
                                    BorderThickness="0"
                                    Command="{Binding ElementName=SearchPage, Path=DataContext.DelegateCommand}"
                                    CommandParameter="{Binding ArticleId}"
                                    Content="{Binding Title}"
                                    DockPanel.Dock="Top"
                                    FontSize="24"
                                    FontWeight="Black"
                                    Style="{DynamicResource ButtonDashed}" />
                                <TextBox
                                    DockPanel.Dock="Top"
                                    IsReadOnly="True"
                                    Text="{Binding Introduction}" />
                            </DockPanel>
                        </hc:Card>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>







            <hc:Pagination
                Margin="15"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                DockPanel.Dock="Top"
                IsJumpEnabled="True"
                MaxPageCount="{Binding Pages}"
                PageIndex="{Binding Page}" />
            <hc:GotoTop
                Grid.Row="2"
                Margin="15"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Animated="True"
                AnimationTime="500"
                AutoHiding="True"
                DockPanel.Dock="Top"
                Target="{Binding ElementName=SearchScrollViewer}"
                ToolTip="返回顶部" />
            <TextBlock
                Margin="15,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                DockPanel.Dock="Bottom"
                FontSize="12"
                Text="{Binding Message}"
                ToolTip="{Binding Message}" />
        </DockPanel>
    </hc:ScrollViewer>
</UserControl>
