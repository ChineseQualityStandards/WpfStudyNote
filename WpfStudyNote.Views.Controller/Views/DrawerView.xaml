<UserControl
    x:Class="WpfStudyNote.Views.Controller.Views.DrawerView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:local="clr-namespace:WpfStudyNote.Views.Controller.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    d:DesignHeight="450"
    d:DesignWidth="300"
    prism:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d">
    <ScrollViewer>
        <DockPanel LastChildFill="True">
            <hc:Card
                Width="200"
                Height="150"
                Margin="32"
                DockPanel.Dock="Top">
                <DockPanel Margin="5">
                    <Button
                        Width="100"
                        Height="100"
                        DockPanel.Dock="Top"
                        ToolTip="修改头像">
                        <Button.Content>
                            <Border Background="{DynamicResource BorderBrush}" Style="{DynamicResource BorderCircularClip}">
                                <Image DockPanel.Dock="Top" Source="C:\Users\ZFREE\Pictures\资料文档\明日方舟 阿米娅.jpg" />
                            </Border>
                        </Button.Content>
                    </Button>
                    <Button
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        BorderThickness="0"
                        Content="明日方舟 阿米娅"
                        DockPanel.Dock="Bottom"
                        FontFamily="DFKai-SB"
                        FontSize="18"
                        Style="{DynamicResource ButtonDefault}"
                        ToolTip="进入个人空间" />
                </DockPanel>
            </hc:Card>
            <!--  主页按钮  -->
            <Button
                Width="200"
                Height="40"
                Margin="10"
                hc:IconElement.Geometry="{DynamicResource home-001}"
                Command="{Binding DelegateCommand}"
                CommandParameter="GoHome"
                Content="主页"
                DockPanel.Dock="Top"
                FontFamily="DFKai-SB"
                FontSize="22"
                Style="{DynamicResource ButtonDefault}" />
            <!--  设置按钮  -->
            <Button
                Width="200"
                Height="40"
                Margin="10"
                hc:IconElement.Geometry="{DynamicResource setting-001}"
                Command="{Binding DelegateCommand}"
                CommandParameter="GoSetting"
                Content="设置"
                DockPanel.Dock="Top"
                FontFamily="DFKai-SB"
                FontSize="22"
                Style="{DynamicResource ButtonDefault}" />
            <!--  测试按钮  -->
            <Button
                Width="200"
                Height="40"
                Margin="10"
                hc:IconElement.Geometry="{DynamicResource microsoft-dotnet-001}"
                Command="{Binding DelegateCommand}"
                CommandParameter="GoTest"
                Content="测试页"
                DockPanel.Dock="Top"
                FontFamily="DFKai-SB"
                FontSize="22"
                Style="{DynamicResource ButtonDefault}" />

            <TextBlock
                Margin="10"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                FontFamily="DFKai-SB"
                FontSize="15"
                Text="{Binding Message}"
                ToolTip="{Binding Message}" />
        </DockPanel>
    </ScrollViewer>
</UserControl>
