<UserControl
    x:Class="WpfStudyNote.Views.Controller.Views.HomeView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:local="clr-namespace:WpfStudyNote.Views.Controller.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    d:DesignHeight="450"
    d:DesignWidth="800"
    prism:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d">
    <hc:ScrollViewer x:Name="HomeScrollViewer" IsInertiaEnabled="True">
        <Border Style="{DynamicResource BorderRegion}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="5*" />
                    <RowDefinition Height="3*" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <hc:Carousel
                    Grid.Row="0"
                    Width="680"
                    Height="420"
                    Margin="5"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    AutoRun="True"
                    IsCenter="True"
                    ItemsSource="{Binding Carousels}"
                    PageButtonStyle="{DynamicResource BaseStyle}">
                    <hc:Carousel.ItemTemplate>
                        <DataTemplate>
                            <DockPanel LastChildFill="True">
                                <hc:ImageBlock
                                    Width="680"
                                    Height="420"
                                    Interval="{Binding Interval}"
                                    IsPlaying="{Binding IsPlaying}"
                                    Source="{Binding Source}"
                                    ToolTip="{Binding ToolTip}" />
                            </DockPanel>
                        </DataTemplate>
                    </hc:Carousel.ItemTemplate>
                </hc:Carousel>
                <hc:Row Grid.Row="1" Margin="5">
                    <hc:Col Span="7">
                        <Border
                            Height="400"
                            Background="{DynamicResource BackgroundBrush}"
                            CornerRadius="4" />
                    </hc:Col>
                    <hc:Col Span="10">
                        <Border
                            Height="400"
                            Background="{DynamicResource SecondaryBorderBrush}"
                            CornerRadius="4" />
                    </hc:Col>
                    <hc:Col Span="7">
                        <Border
                            Height="400"
                            Background="{DynamicResource DangerBrush}"
                            CornerRadius="4" />
                    </hc:Col>
                </hc:Row>
                <hc:GotoTop
                    Grid.Row="2"
                    Margin="5"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Animated="True"
                    AnimationTime="500"
                    AutoHiding="True"
                    Target="{Binding ElementName=HomeScrollViewer}"
                    ToolTip="返回顶部" />
                <TextBlock
                    Grid.Row="3"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="12"
                    Text="{Binding Message}"
                    ToolTip="{Binding Message}" />
            </Grid>
        </Border>
    </hc:ScrollViewer>
</UserControl>
