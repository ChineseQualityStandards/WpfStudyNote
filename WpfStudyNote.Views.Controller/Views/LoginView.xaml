<UserControl
    x:Class="WpfStudyNote.Views.Controller.Views.LoginView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WpfStudyNote.Views.Controller.Views"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    Width="400"
    Height="450"
    d:DesignHeight="450"
    d:DesignWidth="400"
    prism:Dialog.WindowStartupLocation="CenterScreen"
    prism:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock
            Grid.Row="0"
            Margin="20,50"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="36"
            FontWeight="Medium"
            Text="{Binding Title}" />
        <TextBox
            Grid.Row="1"
            Height="54"
            Margin="10"
            Padding="7"
            materialDesign:HintAssist.Hint="请输入账号"
            Background="White"
            FontFamily="kaiti"
            FontSize="20"
            Opacity="0.7"
            Style="{DynamicResource MaterialDesignOutlinedTextBox}"
            Text="{Binding UserName}" />
        <PasswordBox
            x:Name="PasswordBox"
            Grid.Row="2"
            Height="54"
            Margin="10"
            Padding="7"
            materialDesign:HintAssist.Hint="请输入密码"
            Background="White"
            FontFamily="kaiti"
            FontSize="20"
            Opacity="0.8"
            Style="{DynamicResource MaterialDesignOutlinedPasswordBox}">
            <PasswordBox.InputBindings>
                <KeyBinding
                    Key="Return"
                    Command="{Binding LoginCommand}"
                    CommandParameter="{Binding ElementName=PasswordBox}" />
            </PasswordBox.InputBindings>
        </PasswordBox>
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Button
                Grid.Column="0"
                Margin="10,0"
                BorderThickness="0"
                Content="忘记密码"
                Style="{DynamicResource MaterialDesignOutlinedButton}" />
            <Button
                Grid.Column="1"
                Margin="10,0"
                BorderThickness="0"
                Command="{Binding DelegateCommand}"
                CommandParameter="RegisterView"
                Content="注册账号"
                Style="{DynamicResource MaterialDesignOutlinedButton}" />
        </Grid>
        <Button
            Grid.Row="4"
            Height="54"
            Margin="20"
            Command="{Binding LoginCommand}"
            CommandParameter="{Binding ElementName=PasswordBox}"
            Content="登录"
            Style="{DynamicResource MaterialDesignFlatMidBgButton}" />
        <TextBlock
            Grid.Row="5"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Foreground="Red"
            Text="{Binding Message}" />
    </Grid>
</UserControl>
